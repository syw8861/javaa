<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1">
	
	<top>
		<ToolBar>
			<items>
			
				<Button text ="New">
					<graphic>
						<ImageView>
							<image>
								<Image url="@/panes/icons/new.png"/>
							</image>
						</ImageView>
					</graphic>
				</Button>
				
				
				
				<Button text ="Open">
					<graphic>
						<ImageView>
							<image>
								<Image url="@/panes/icons/open.png"/>
							</image>
						</ImageView>
					</graphic>
				</Button>
				<Separator />  <!-- 구분선 -->
				
				
				
				<Button text ="Save">
					<graphic>
						<ImageView>
							<image>
								<Image url="@/panes/icons/save.png"/>
							</image>
						</ImageView>
					</graphic>
				</Button>
				
			</items>
		</ToolBar>
	</top>
	
	
	
	<center>
		<TextArea />
	</center>
	
	<bottom>
	</bottom>
</BorderPane>

